<skin>
    <!-- GŁÓWNY EKRAN PANELU -->
    <screen name="AzmanPanelMainScreen" position="center,center" size="1500,640" title="Azman Panel" backgroundColor="#00000000" flags="wfNoBorder">
        
        <!-- #################### TŁO I NAGŁÓWEK #################### -->
        
        <!-- Tło dla siatki kafelków (półprzezroczyste) -->
        <ePixmap pixmap="skin_default/blank.png" position="0,95" size="1500,420" backgroundColor="#D9000000" zPosition="-1" />

        <!-- Tło dla nagłówka (w pełni kryjące) -->
        <ePixmap pixmap="skin_default/blank.png" position="0,0" size="1500,95" backgroundColor="black" zPosition="-1" />
        
        <!-- Tytuł główny -->
        <widget name="title" position="20,20" size="250,50" font="Regular;40" halign="left" valign="center" foregroundColor="#FFFFFF" transparent="1" />
        
        <!-- Tytuł zaznaczonego kafelka -->
        <widget source="selected_title" render="Label" position="270,20" size="950,50" font="Regular;40" halign="left" valign="center" foregroundColor="#389416" transparent="1" />

        <!-- Wersja pluginu -->
        <widget name="version_info" position="1230,30" size="250,30" font="Regular;22" halign="right" valign="center" foregroundColor="#FFFFFF" transparent="1" />

        <!-- Pasek pod tytułem (w pełni kryjący) -->
        <ePixmap pixmap="skin_default/blank.png" position="20,80" size="1460,3" backgroundColor="#FFFFFF" zPosition="1" />

        <!-- #################### SIATKA KAFELKÓW #################### -->
        <!-- Rząd 0 -->
        <widget name="marker_0x0" position="20,100" size="263,172" alphatest="blend" />
