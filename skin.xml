        <widget name="logo_0x3" position="950,120" size="220,132" alphatest="blend" />
        <widget name="marker_0x4" position="1232,100" size="263,172" alphatest="blend" />
        <widget name="logo_0x4" position="1253,120" size="220,132" alphatest="blend" />
        
        <!-- Rząd 1 -->
        <widget name="marker_1x0" position="20,282" size="263,172" alphatest="blend" />
        <widget name="logo_1x0" position="41,302" size="220,132" alphatest="blend" />
        <widget name="marker_1x1" position="323,282" size="263,172" alphatest="blend" />
        <widget name="logo_1x1" position="344,302" size="220,132" alphatest="blend" />
