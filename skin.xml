        <widget name="marker_1x4" position="1232,282" size="263,172" alphatest="blend" />
        <widget name="logo_1x4" position="1253,302" size="220,132" alphatest="blend" />

        <!-- #################### STOPKA #################### -->
        <widget name="description" position="20,525" zPosition="2" size="1460,50" foregroundColor="white" valign="center" halign="center" font="Regular;32" transparent="1" />
        
        <ePixmap pixmap="/usr/lib/enigma2/python/Plugins/Extensions/AzmanPanel/icons/key_exit.png" position="1370,570" size="120,55" alphatest="blend" />
        <ePixmap pixmap="/usr/lib/enigma2/python/Plugins/Extensions/AzmanPanel/icons/key_ok.png" position="1230,570" size="120,55" alphatest="blend" />
